<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_nav"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom|center"
    android:orientation="vertical"
    android:scaleType="centerCrop"
    android:paddingBottom="@dimen/paddingMedium"
    android:paddingLeft="@dimen/paddingMedium"
    android:paddingRight="@dimen/paddingMedium"
    android:paddingTop="@dimen/paddingMedium"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_account_circle"/>

    <TextView
        android:id="@+id/tv_username"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/paddingMedium"
        android:text="Agung Setiawan"
        android:textColor="@color/colorTextWhite"/>

    <TextView
        android:textColor="@color/colorTextWhite"
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="agungstwn0@gmail.com"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/text_medium">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Suported by: "
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/android_kejar_img"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginRight="2dp"/>
        <ImageView
            android:id="@+id/google_dev"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>